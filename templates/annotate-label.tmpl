<span class="left cell">
	<span class="item-abbreviation read-only" title="{{value}}">{{abbreviation}}</span>
	<input class="item-abbreviation edit" type="text" value="{{abbreviation}}" {{#if notEdit}}disabled='disabled'{{/if}}/> 
</span>
<span class="center cell">
	<input class="item-value edit" type="text" value="{{value}} - ({{abbreviation}})" placeholder="Label value..." {{#if notEdit}}disabled='disabled'{{/if}}/> 
</span>
<span class="right cell">
	<span class="item-icon">{{icon}}</span>
	<i class="icon-trash delete edit"></i>
</span>
<ul class="scaling">
{{#each scaleValues}}
	<li value="{{this.id}}" title="{{this.name}}" >{{this.name}}</li>
{{/each}}
</ul>

