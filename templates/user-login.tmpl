
	  <div class="modal-header">
	    <h3>User login</h3>
	  </div>
	  <div class="modal-body">
		<form class="form-horizontal">
			<fieldset>
			        <div class="alert alert-error" style="display:none">
					<span><i class="icon-exclamation-sign"></i></span>
					<span id="content"></span>
					
				</div>
				
				<div class="alert alert-info">
					Create a new nickname for the user you are logged with in current context (LTI tool or other).
				</div>
				
				<div class="control-group">
					<label class="control-label" for="nickanme"><b>*</b> Nickname: </label>
					<div class="controls">
						<input type="text" class="input-xlarge" placeholder="Insert your nickname" id="nickname">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="email"><b>*</b> Email: </label>
					<div class="controls">
						<input type="text" class="input-xlarge" placeholder="Insert your email address" id="email">
					</div>
				</div>

				{{#if localStorage}}
				<div class="control-group">
					<label class="control-label" for="supervisor">Log as supervisor: </label>
					<div class="controls">
						<input type="checkbox" id="supervisor">
					</div>
				</div>
				{{/if}}

				<div class="control-group">
					<label class="control-label">Remember me: </label>
					<div class="controls">
						<input type="checkbox" id="remember" name="remember" value="remember">
					</div>
				</div>


				<div style="float:right"><b>* required fields</b></div>
			</fieldset>
		</form>
	  </div>
	  <div class="modal-footer">
	    <a id="save-user" href="#" class="btn btn-primary">Login</a>
	  </div>
