<div class="timeline-group" onclick="$(window).trigger('selectTrack', ['{{id}}'])">
    <div class="track-id">{{id}}</div>
    <i onclick="$(window).trigger('deleteTrack', ['{{id}}'])" class="delete icon-remove" title="Delete  track"></i>
    <a id="track{{id}}" onclick="$(window).trigger('selectTrack', ['{{id}}'])"><div class="content" title="{{name}}" rel="popover" data-content="{{#if description}}{{description}}{{else}}No description{{/if}}" data-original-title="{{name}}">{{name}}</div></a>
</div>

