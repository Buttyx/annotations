<div class="modal" id="modal-track-selection">
	  <div class="modal-header">
	    <h3>Other public annotations</h3>
	  </div>

	  <div class="modal-body">
        Public tracks:

        <input type="text" id="search-track" placeholder="Type here to search...">

        <ul class="list-group">
            {{#each tracks}}
            <li class="list-group-item">
                <input type="checkbox" value="{{this.id}}" {{#if this.visible}}checked{{/if}}> {{this.name}} - {{this.created_by_nickname}}
                <span class="search-fields">
                    {{#toUpperCase}}
                    {{this.name}} {{this.created_by_nickname}} 
                    {{/toUpperCase}}
                </span>
            </li>
            {{/each}}
            <li class="search-only">Show all track</li>
        </ul>

        <span>
            <input type="checkbox" value=""> Select / unselect all
        </span>
	  </div>


	  <div class="modal-footer">
        <a id="cancel-selection" href="#" class="btn">Cancel</a>
	    <a id="confirm-selection" href="#" class="btn btn-primary">Ok</a>
	  </div>
</div>