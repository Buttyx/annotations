<div class="modal" id="modal-add-group">
	  <div class="modal-header">
	    <h3>Add new track</h3>
	  </div>
	  <div class="modal-body">
		<form class="form-horizontal">
			<fieldset>
			        <div class="alert alert-error" style="display:none">
					<span><i class="icon-exclamation-sign"></i></span>
					<span id="content"></span>
					
				</div>
				<div class="control-group">
					<label class="control-label" for="name"><b>*</b> Name: </label>
					<div class="controls">
						<input type="text" placeholder="Insert the new track name" id="name">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="description">Description: </label>
					<div class="controls">
						<input type="text" placeholder="Insert a description for the new track" id="description">
					</div>
				</div>

				<div class="control-group">
					<label class="control-label" for="public">Public: </label>
					<div class="controls">
						<input type="checkbox" id="public">
					</div>
				</div>


				<div style="float:right"><b>* required fields</b></div>
			</fieldset>
		</form>
	  </div>
	  <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
	    	<a href="#" id="add-group" class="btn btn-primary">Add</a>
	  </div>
</div>